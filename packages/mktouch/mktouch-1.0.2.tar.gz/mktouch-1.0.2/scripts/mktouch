#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage="usage: ${BASH_SOURCE[0]##*/} path ..."

[[ $# == 0 ]] || [[ $1 == "--help" ]] && {
	echo "$usage"
	[[ $1 == "--help" ]]; exit # exit 0 if --help
}

IFS=
mkdir="$(
while [[ $# != 0 ]]; do
	[[ "$1" == */* ]] && ! [ -e "${1%/*}" ] && echo "${1%/*}"
	shift
done;:
)" || exit

touch="$(IFS=$'\n';echo "$*" | sort -u)"

[[ -n "$mkdir" ]] && {
	mkdir="$(echo "$mkdir" | sort -u)"
	IFS=$'\n';set -- $mkdir;IFS=
	( set -x; mkdir -p "$@" ) || exit
}

touch="$(echo "$touch" | sort -u)"
IFS=$'\n';set -- $touch;IFS=
( set -x; /usr/bin/touch "$@" ) || exit
