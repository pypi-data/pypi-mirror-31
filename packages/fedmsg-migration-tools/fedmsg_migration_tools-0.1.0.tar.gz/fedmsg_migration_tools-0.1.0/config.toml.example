
amqp_url = "amqp://"

[amqp_to_zmq]
    # The ZeroMQ socket to publish messages to; by default it binds to TCP port
    # 9940 on all available interfaces.
    publish_endpoint = "tcp://*:9940"

    # A list of bindings to create; each binding should have an exchange and
    # and routing key or additional arguments. See documentation on AMQP
    # exchanges for more information.
    [[amqp_to_zmq.bindings]]
    exchange = "amq.topic"
    routing_key = "#"
    arguments = {}

[zmq_to_amqp]

    # The AMQP exchange to publish to.
    exchange = "zmq.topic"
    # A list of topics to filter the incoming ZMQ messages on; by default all
    # messages are forwarded to AMQP.
    topics = [""]
    # A list of strings in the ZeroMQ socket format (e.g. "tcp://host:socket")
    zmq_endpoints = []

# The logging configuration, in Python dictConfig format.
[log_config]
    version = 1
    disable_existing_loggers = true

    [log_config.formatters]
        [log_config.formatters.simple]
            format = "[%(name)s %(levelname)s] %(message)s"

    [log_config.handlers]
        [log_config.handlers.console]
            class = "logging.StreamHandler"
            formatter = "simple"
            stream = "ext://sys.stdout"

    [log_config.loggers]
        [log_config.loggers.fedmsg_migration_tools]
            level = "INFO"
            propagate = false
            handlers = ["console"]

    [log_config.root]
        level = "WARNING"
        handlers = ["console"]
